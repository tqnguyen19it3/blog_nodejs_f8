<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="margin-top: 16px">
                <a href="/khoa-hoc/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"></a>
                <div class="card-body">
                    <a href="/khoa-hoc/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
                    <p class="card-text">{{this.description}}
                    <a href="/khoa-hoc/{{this.slug}}" class="btn btn-primary">Xem khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>